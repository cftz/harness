{
    "mcpServers": {
        "jira2": {
            "command": "npx",
            "args": [
                "-y",
                "@team-attention/mcproxy",
                "--",
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.atlassian.com/v1/mcp"
            ]
        },
        "jira": {
            "command": "npx",
            "args": [
                "-y",
                "@team-attention/mcproxy",
                "--",
                "uvx",
                "mcp-atlassian"
            ],
            "env": {
                "JIRA_URL": "${JIRA_URL}",
                "JIRA_USERNAME": "${JIRA_EMAIL}",
                "JIRA_API_TOKEN": "${JIRA_API_TOKEN}"
            }
        }
    }
}